{
  "hosting": {
    "public": "./platforms/browser/www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
    "headers": [
			{
				"source": "service-worker.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			}
		]
  }
}
